<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
        <hibernate-mapping>
            <class name="employee" table="emp_table">
                <id name="id" column="emp_id">
                <generator class="increment"></generator>
                </id>
                
                <property name="name" column="emp_name"></property>
                <property name="gender" column="emp_gender"></property>
                <property name="department" column="emp_depar" length="20"></property>
                <property name="salary" column="emp_salary" unique="true"></property>
            </class>



        </hibernate-mapping>